<div class="row">
  <div class="span4">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "well" }) do |f| %>
        <%= devise_error_messages! %>

           <fieldset>
               <legend>Edit <%= resource_name.to_s.humanize %></legend>
                <%= f.input :email %> 
                <%= f.input :password %>
                <%= f.input :password_confirmation %>
                <%= f.input :current_password %>
                <%= f.button :submit, "Update" %>
            </fieldset> 
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

      <%= link_to "Back", statuses_path %>

  </div>
  <div class="span8">
    <h2>Signing in is easy and secure</h2>
  </div>
</div>
